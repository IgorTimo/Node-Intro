<p>{{comment.body}}</p>
<em>{{comment.date}}</em>

<form method="post" action="/comment/{{comment._id}}?_method=PUT">
  <div>
    <label for="comment_title">Title:</label>
    <input type="text" name="comment_title" id="comment_title" value="{{comment.title}}"   />
  </div>
  <div>
    <label for="comment_body">Body:</label>
    <textarea type="text" name="comment_body" id="comment_body">{{comment.body}}</textarea>
  </div>
  <div>
    <input type="submit" value="Edit" />
  </div>
</form>